<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        tools:context=".presentation.userProfile.ProfileActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/c_grey"
                app:cardCornerRadius="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button_edit_user"
                    android:layout_width="wrap_content"
                    android:padding="10sp"
                    android:layout_gravity="end"
                    android:text="@string/btn_edit_user"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    android:drawableTint="@color/white"
                    android:drawableEnd="@drawable/ic_edit"
                    android:textColor="@color/white"
                    android:background="@color/c_grey"
                    />
            <ImageView
                android:padding="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src ="@drawable/img_account"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Apple"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:theme="@style/FontSizeLarge"
                    android:padding="5sp"
                    android:id="@+id/text_view_name"/>
                <include layout="@layout/line_view"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_username"
                        android:textColor="@color/c_light_grey"
                        android:theme="@style/FontSizeMedium"/>
                <TextView
                    tools:text="Apple"
                    android:textColor="@color/white"
                    android:theme="@style/FontSizeMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_username"/>


                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_email"
                        android:textColor="@color/c_light_grey"
                        android:theme="@style/FontSizeMedium"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Apple"
                    android:textColor="@color/white"
                    android:theme="@style/FontSizeMedium"
                    android:id="@+id/text_view_email"/>
                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_joined"
                        android:textColor="@color/c_light_grey"
                        android:theme="@style/FontSizeMedium"/>

                <TextView
                    tools:text="Apple"
                    android:textColor="@color/white"
                    android:theme="@style/FontSizeMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_joined"/>



                </LinearLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <include layout="@layout/bottom_navigation" />
        </RelativeLayout>

    </LinearLayout>


</layout>