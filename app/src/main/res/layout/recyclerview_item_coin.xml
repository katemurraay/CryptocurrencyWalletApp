<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="@color/black"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_coin_item"

                android:layout_margin="5sp"

                android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_coin_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textStyle="italic"
            android:padding="12dp"
            android:theme="@style/FontSizeSmall"
            android:textColor="@color/primary_text"
            tools:text="Apple" />
        <TextView
            android:id="@+id/text_view_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="12dp"
            android:textStyle="bold"
            android:theme="@style/FontSizeLarge"
            android:textColor="@color/primary_text"
            tools:text="Apple" />
</LinearLayout>
        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:padding="12dp"
            android:theme="@style/FontSizeMedium"
            android:textColor="@color/primary_text"
            tools:text="$2.123" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


</layout>