<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_register"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                app:cardBackgroundColor="@color/c_dark_grey"
                app:cardCornerRadius="2dp"
                android:layout_height="wrap_content">

             <ScrollView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20sp"
                    android:layout_margin="15sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:padding="2sp"
                        android:textColor="@android:color/white"
                        android:theme="@style/FontSizeLarge"
                        android:text="@string/tv_registration" />
                    <include layout="@layout/line_view"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/FontSizeSmall"
                        android:text="@string/tv_registered"
                        android:textStyle="italic"
                        android:textAlignment="textEnd"
                        android:id="@+id/text_view_login"
                        android:textColor="@android:color/holo_blue_light"/>

                    <TextView
                        android:textColor="@android:color/holo_red_light"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:padding="10sp"
                        android:id="@+id/text_view_error"
                        android:layout_height="wrap_content"
                        android:theme="@style/FontSizeSmall"
                        tools:text="Error"/>
                    <TextView
                        android:textColor="@color/c_light_grey"
                        android:layout_width="match_parent"
                        android:padding="10sp"
                        android:layout_height="wrap_content"
                        android:theme="@style/FontSizeSmall"
                        android:text="@string/tv_f_name"/>
                    <EditText
                        android:color="@color/white"
                        android:textColorHint="@color/white"
                        android:maxWidth="480dp"
                        android:autofillHints="name"
                        android:id="@+id/edit_text_fname"
                        android:layout_width="match_parent"
                        android:theme="@style/FontSizeSmall"
                        android:padding="10sp"
                        android:inputType="text"
                        android:layout_height="55sp"
                        android:hint="@string/et_f_name"/>
                    <TextView
                        android:textColor="@color/c_light_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/FontSizeSmall"
                        android:layout_marginTop="10sp"
                        android:padding="10dp"
                        android:text="@string/tv_surname"/>
                    <EditText
                        android:textColorHint="@color/white"
                        android:maxWidth="480dp"
                        android:padding="10sp"
                        android:textColor="@color/white"
                        android:autofillHints="name"
                        android:id="@+id/edit_text_surname"
                        android:layout_width="match_parent"
                        android:theme="@style/FontSizeSmall"
                        android:inputType="textUri"
                        android:layout_height="55sp"
                        android:hint="@string/et_surname"/>
                    <TextView
                        android:textColor="@color/c_light_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/FontSizeSmall"
                        android:layout_marginTop="10sp"
                        android:padding="10dp"
                        android:text="@string/tv_username"/>
                    <EditText
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:maxWidth="480dp"
                        android:autofillHints="username"
                        android:id="@+id/edit_text_username"
                        android:layout_width="match_parent"
                        android:theme="@style/FontSizeSmall"
                        android:padding="10sp"
                        android:inputType="text"
                        android:layout_height="55sp"
                        android:hint="@string/et_username"/>
                    <TextView
                        android:textColor="@color/c_light_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/FontSizeSmall"
                        android:layout_marginTop="10sp"
                        android:padding="10dp"

                        android:text="@string/tv_password"/>
                    <EditText
                        android:textColorHint="@color/white"
                        android:maxWidth="480dp"
                        android:padding="10sp"
                        android:textColor="@color/c_white"
                        android:autofillHints="password"
                        android:id="@+id/edit_text_password"
                        android:layout_width="match_parent"
                        android:theme="@style/FontSizeSmall"
                        android:inputType="textPassword"
                        android:layout_height="55sp"
                        android:hint="@string/et_password"/>
                    <TextView
                        android:textColor="@color/c_light_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/FontSizeSmall"
                        android:layout_marginTop="10sp"
                        android:padding="10dp"
                        android:text="@string/tv_email"/>
                    <EditText
                        android:maxWidth="480dp"
                        android:padding="10sp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/c_white"
                        android:autofillHints="emailAddress"
                        android:id="@+id/edit_text_email"
                        android:layout_width="match_parent"
                        android:theme="@style/FontSizeSmall"
                        android:inputType="textEmailAddress"
                        android:layout_height="55sp"
                        android:hint="@string/et_email"/>
                    <Button
                        android:background="@drawable/bg_rounded_button_grey"
                        android:textColor="@color/white"
                        android:maxWidth="300dp"
                        android:layout_marginTop="20sp"
                        android:id="@+id/button_register"
                        android:theme="@style/FontSizeMedium"
                        android:layout_width="match_parent"
                        android:text="@string/tv_register"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
             </ScrollView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

</layout>